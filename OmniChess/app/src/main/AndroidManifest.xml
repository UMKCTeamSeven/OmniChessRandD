<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/"
          xmlns:http="http://schemas.android.com/apk/res/android"
    package="com.donthaveawebsite.mhy.omnichess">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@strings.xml/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@strings.xml/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutOmniChess"
            android:label="@strings.xml/title_activity_about_omni_chess"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.donthaveawebsite.mhy.omnichess.MainActivity" />
        </activity>
        <activity android:name=".GameActivity"
            android:label="Game Activity"
            android:parentActivityName=".MainActivity">


        </activity>

        <activity android:name=".AchievementsActivity"
            android:label="Achievements Activity"
            android:parentActivityName=".MainActivity">

        </activity>
    </application>

</manifest>
