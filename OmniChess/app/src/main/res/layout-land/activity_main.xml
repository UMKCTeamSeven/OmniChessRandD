<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/OMNICHESS"
        android:id="@+id/TITLEHEADERTEXT"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/NEWGAME"
        android:id="@+id/NEWGAMETEXT"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/TITLEHEADERTEXT"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Exit"
        android:id="@+id/EXITTEXT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ACHIEVEMENTS"
        android:id="@+id/ACHIEVETEXT"
        android:layout_above="@+id/EXITTEXT"
        android:layout_alignLeft="@+id/NEWGAMETEXT"
        android:layout_alignStart="@+id/NEWGAMETEXT"
        android:layout_marginBottom="64dp" />
</RelativeLayout>
