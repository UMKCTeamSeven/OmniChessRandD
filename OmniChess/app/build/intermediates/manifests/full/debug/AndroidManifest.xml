<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.donthaveawebsite.mhy.omnichess"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.donthaveawebsite.mhy.omnichess.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.donthaveawebsite.mhy.omnichess.AboutOmniChess"
            android:label="@string/title_activity_about_omni_chess"
            android:parentActivityName="com.donthaveawebsite.mhy.omnichess.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.donthaveawebsite.mhy.omnichess.MainActivity" />
        </activity>
        <activity
            android:name="com.donthaveawebsite.mhy.omnichess.GameActivity"
            android:label="Game Activity"
            android:parentActivityName="com.donthaveawebsite.mhy.omnichess.MainActivity" >
        </activity>
        <activity
            android:name="com.donthaveawebsite.mhy.omnichess.AchievementsActivity"
            android:label="Achievements Activity"
            android:parentActivityName="com.donthaveawebsite.mhy.omnichess.MainActivity" >
        </activity>
    </application>

</manifest>